<%- include('partials/head') %>


    <body class="text-center">
        <h1 class="text-white">Featured Projects</h1>
        <div class="mt-3 mb-4">
            <a class="btn btn-warning text-dark" href="/accelerator/new">Submit Proposal</a>

            <!-- bootstrap modal -->
            <button type="button" class="btn btn-light ml-2" data-toggle="modal" data-target="#exampleModal">
                Info
            </button>

            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
                aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title text-dark" id="exampleModalLabel">What is the TC accelerator project?
                            </h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body text-dark">
                            A newer (MOCK) company in the Web3 world, TC strives to invest in the brilliant minds of the
                            creators in this space. From cryptocurrency to NFT startups, we are here to help turn
                            sketches on paper into a reality!
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- end of bootstrap modal -->

        <div class="container d-flex flex-row flex-wrap justify-content-center">
            <% for (let a of p) { %>
                <div class="project mx-3" style="width:18rem;">
                    <div class="card">
                        <img src="<%= a.image %>" class="card-img-top" alt="...">
                        <div class="card-body">
                            <p class="card-text text-dark">
                                <%= a.description %>
                            </p>
                            <a href="/accelerator/<%=a._id%>" class="btn btn-primary">About <%= a.name %></a>
                        </div>
                    </div>
                </div>
                <% } %>



                    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
                        integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
                        crossorigin="anonymous"></script>
                    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js"
                        integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh"
                        crossorigin="anonymous"></script>
                    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js"
                        integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ"
                        crossorigin="anonymous"></script>
    </body>


    </html>